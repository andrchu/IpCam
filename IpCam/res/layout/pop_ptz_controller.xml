<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.6"
    android:background="#626262"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/common_operate_area"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg" />

            <ImageView
                android:id="@+id/ptz_up"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg_click"
                android:src="@drawable/ptz_up" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg" />

            <ImageView
                android:id="@+id/ptz_zoom_in"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/common_zoom_in"
                android:background="@drawable/ptz_btn_bg_click"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/ptz_zoom_out"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/common_zoom_out"
                android:background="@drawable/ptz_btn_bg_click"
                android:padding="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ptz_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg_click"
                android:src="@drawable/ptz_left" />

            <ImageView
                android:id="@+id/ptz_stop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg_click"
                android:src="@drawable/ptz_stop" />

            <ImageView
                android:id="@+id/ptz_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg_click"
                android:src="@drawable/ptz_right" />

            <ImageView
                android:id="@+id/ptz_left_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg_click"
                android:src="@drawable/ptz_left_right" />

            <ImageView
                android:id="@+id/ptz_up_down"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg_click"
                android:src="@drawable/ptz_up_down" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg" />

            <ImageView
                android:id="@+id/ptz_down"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg_click"
                android:src="@drawable/ptz_down" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ptz_btn_bg" />

        </LinearLayout>

        <Button
            android:id="@+id/cancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/pop_window_cancel_bg"
            android:text="@string/login_user_login_cancel"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>