<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_more_item_margin_top1"
        android:background="@drawable/tab_view_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_add_property_one"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_add_property_one"
                android:layout_width="@dimen/user_login_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/login_user_account"
                android:textSize="@dimen/login_text_size" />

            <EditText
                android:id="@+id/login_edit_account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:hint="@string/login_account_hint"
                android:paddingLeft="10dp"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_add_property_two"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/list_line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_add_property_two"
                    android:layout_width="@dimen/user_login_text_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/login_user_password"
                    android:textSize="@dimen/login_text_size" />

                <EditText
                    android:id="@+id/login_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:hint="@string/login_pass_hint"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/title_user_reset_password"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/tv_forget_pwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/kaicong_orange_click"
        android:gravity="center"
        android:paddingLeft="@dimen/about_more_item_padding_left"
        android:text="@string/login_user_login_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/about_more_item_text_size" />

    <TextView
        android:id="@+id/text_register"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/me_register_btn_click"
        android:gravity="center"
        android:text="@string/login_user_register"
        android:textColor="@color/white"
        android:textSize="@dimen/about_more_item_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_login"
        android:layout_marginTop="60dp"
        android:gravity="center|left"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@color/list_line"
                android:layout_width="0dp"
                android:layout_height="1dp"></View>

            <TextView
                android:layout_weight="1.5"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/login_other_Login"
                android:textSize="@dimen/login_text_size" />

            <View
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@color/list_line"
                android:layout_width="0dp"
                android:layout_height="1dp"></View>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_wchat"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/umeng_socialize_wechat_click" />

            <ImageView
                android:id="@+id/img_sina"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/umeng_socialize_sina_click" />

            <ImageView
                android:id="@+id/img_qq"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/umeng_socialize_qq_click" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>