<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/add_name_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_add_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edit_add_name"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/tab_view_background" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/tab_view_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/about_more_item_margin_top1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_add_property_one"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_add_property_one"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/edit_add_property_one"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="30dp"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_add_property_two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <View
                    android:background="@color/list_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_add_property_two"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/edit_add_property_two"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="30dp"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_add_property_three"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <View
                    android:background="@color/list_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_add_property_three"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/edit_add_property_three"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="30dp"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_add_property_four"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <View
                    android:background="@color/list_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_add_property_four"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/edit_add_property_four"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="30dp"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_add_property_five"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <View
                    android:background="@color/list_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_add_property_five"
                        android:layout_width="70dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edit_add_property_five"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="30dp"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/tab_view_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/about_more_item_margin_top1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_add_property_longitude"
                    android:layout_width="80dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@string/add_longitude" />

                <EditText
                    android:id="@+id/edit_add_property_longitude"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="30dp"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <View
                    android:background="@color/list_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_add_property_latitude"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/add_latitude" />

                    <EditText
                        android:id="@+id/edit_add_property_latitude"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="30dp"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>