<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_edittext_height">

    <EditText
        android:id="@+id/common_edittext"
        android:background="@drawable/common_edit_input_box_n"
        android:layout_margin="10dp"
        android:lines="4"
        android:paddingLeft="2dp"
        android:gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/common_hide"
            android:drawableLeft="@drawable/common_down"
            android:drawablePadding="3dp"
            android:textSize="18sp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="@string/see_world_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/common_commit"
            android:textSize="18sp"
            android:textColor="@android:color/holo_blue_dark"
            android:drawableRight="@drawable/common_upload_l"
            android:drawablePadding="3dp"
            android:layout_alignParentRight="true"
            android:text="@string/see_world_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>