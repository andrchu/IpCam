<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingBottom="3dp"
            android:text="@string/add_device_search_tips"
            android:textColor="@color/my_device_text_color"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/text_by_search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/home_list_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="@dimen/about_more_item_padding_left"
                android:src="@drawable/add_device_search" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:text="@string/add_by_search"
                android:textSize="@dimen/about_more_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:src="@drawable/add_arrow_forward" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:paddingBottom="3dp"
            android:text="@string/add_device_scan_tips"
            android:textColor="@color/my_device_text_color"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/text_by_scan"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/home_list_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="@dimen/about_more_item_padding_left"
                android:src="@drawable/add_device_scanx" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:text="@string/add_by_scan"
                android:textSize="@dimen/about_more_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:src="@drawable/add_arrow_forward" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_by_ddns"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/home_list_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="@dimen/about_more_item_padding_left"
                android:src="@drawable/add_device_domain" />

            <TextView
                android:layout_width="0dp"
