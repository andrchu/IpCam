<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="窗台"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="18322222" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/item_world_view_thumb_up"
                    android:drawablePadding="@dimen/world_view_icon_padding"
                    android:gravity="center_vertical"
                    android:text="182" />

                <TextView
                    android:id="@+id/item_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/push_margin_left"
                    android:drawableLeft="@drawable/item_world_view_comment"
                    android:drawablePadding="@dimen/world_view_icon_padding"
                    android:gravity="center_vertical"
                    android:text="182" />

                <TextView
                    android:id="@+id/item_popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/push_margin_left"
                    android:drawableLeft="@drawable/item_world_view_hot"
                    android:drawablePadding="@dimen/world_view_icon_padding"
                    android:gravity="center_vertical"
                    android:text="182" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_share_date"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/item_world_view_share_date"
                android:drawablePadding="@dimen/world_view_icon_padding"
                android:gravity="center_vertical"
                android:text="2014-9-4" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:divider="@color/list_line"
        android:dividerHeight="1dp"></ListView>

</LinearLayout>