<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tev_deviceName"
        android:textSize="@dimen/login_text_size"
        android:textColor="@color/home_btn_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_more_item_margin_top1"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:gravity="center" />


    <LinearLayout
        android:id="@+id/edit_layout"
        android:background="@drawable/tab_view_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_add_property_five"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <View
                android:background="@color/list_line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_add_property_five"
                    android:textColor="@color/home_btn_center_text"
                    android:textSize="@dimen/login_text_size"
                    android:text="@string/change_pwd_old_password"
                    android:layout_width="@dimen/user_login_text_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/edit_old_password"
                    android:hint="@string/change_pwd_old_hint"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_add_property_six"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <View
                android:background="@color/list_line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_add_property_six"
                    android:textColor="@color/home_btn_center_text"
                    android:textSize="@dimen/login_text_size"
                    android:text="@string/change_pwd_new_password"
                    android:layout_width="@dimen/user_login_text_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/edit_new_password"
                    android:hint="@string/change_pwd_new_hint"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_sure_modifyPasd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:background="@drawable/kaicong_orange_click"
        android:text="@string/btn_save"
        android:textColor="@color/white"/>

</LinearLayout>