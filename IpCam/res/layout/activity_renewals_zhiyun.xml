<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/renewals_zhiyun_bg"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:src="@drawable/pay_shopping"
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/renewals_zcloud_num"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:src="@drawable/pay_calendar"
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/renewals_zcloud_date"
                        android:textSize="18sp"
                        android:text="@string/device_property_pay_year"
                        android:background="@drawable/ptz_btn_bg"
                        android:layout_width="200dp"
                        android:layout_height="30dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:src="@drawable/pay_price_tag"
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/renewals_zcloud_price"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/kaicong_orange"
                    android:text="@string/device_property_pay_price"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btn_ok"
            android:background="@drawable/kaicong_orange_click"
            android:text="@string/btn_ok"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>

</LinearLayout>